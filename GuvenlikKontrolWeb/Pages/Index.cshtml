@page
@model GuvenlikKontrolWeb.Pages.IndexModel

<h2>Tur Analiz Paneli</h2>

<form method="post">

    <div>
        <input type="radio" asp-for="SecimTipi" value="TarihArasi" checked />
        <label>İki Tarih Arası</label>

        <input type="radio" asp-for="SecimTipi" value="Hafta" />
        <label>Hafta Başından Beri</label>

        <input type="radio" asp-for="SecimTipi" value="Ay" />
        <label>Ay Başından Beri</label>
    </div>

    <div>
        <label>Başlangıç Tarihi:</label>
        <input type="datetime-local" asp-for="BaslangicTarihi" />
    </div>

    <div>
        <label>Bitiş Tarihi:</label>
        <input type="datetime-local" asp-for="BitisTarihi" />
    </div>

    <button type="submit">Analiz Getir</button>
</form>

<hr />

@if (Model.AnalizSonucu != null && Model.AnalizSonucu.Count > 0)
{
    <table border="1">
        <tr>
            <th>Tarih</th>
            <th>Bekçi</th>
            <th>Toplam Tur</th>
        </tr>

        @foreach (var item in Model.AnalizSonucu)
        {
            <tr>
                <td>@item.Tarih</td>
                <td>@item.Bekci</td>
                <td>@item.ToplamTur</td>
            </tr>
        }
    </table>
}
