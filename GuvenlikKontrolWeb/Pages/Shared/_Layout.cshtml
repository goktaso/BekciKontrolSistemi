<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tur Sistemi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

            .sidebar .nav-link {
                color: #333;
            }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: white;
                    font-weight: bold;
                }

                .sidebar .nav-link:hover {
                    background-color: #e9ecef;
                }

            .sidebar .filter-section {
                padding: 1rem;
                border-top: 1px solid #dee2e6;
            }

        /* Responsive */
        media (max-width: 768px) {
            .sidebar

        {
            position: fixed;
            left: -250px;
            top: 0;
            z-index: 1050;
            transition: all 0.3s;
        }

        .sidebar.active {
            left: 0;
        }

        }

        .content-area {
            flex: 1;
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="d-flex">

        <!-- Sidebar -->
        <div class="sidebar border-end" id="sidebar">
            <div class="p-3 border-bottom">
                <h5>Tur Sistemi</h5>
            </div>

            <ul class="nav flex-column p-2 mb-3">
                <li class="nav-item">
                    <a class="nav-link active" href="/Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/TurAnaliz">Tur Analizi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/EksikNokta">Eksik Nokta</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/GunlukTur">Günlük Tur</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/BekciPerformans">Bekçi Performansı</a>
                </li>
            </ul>

            <div class="filter-section">
                <h6>Filtre</h6>
                <div class="mb-2">
                    <label class="form-label">Başlangıç</label>
                    <input type="datetime-local" id="menuBas" class="form-control form-control-sm" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Bitiş</label>
                    <input type="datetime-local" id="menuBit" class="form-control form-control-sm" />
                </div>
                <button onclick="goTurAnaliz()" class="btn btn-primary btn-sm w-100">Raporu Getir</button>
            </div>
        </div>

        <!-- Content -->
        <div class="content-area">
            <nav class="navbar navbar-light bg-light border-bottom mb-3 d-md-none">
                <button class="btn btn-outline-secondary" onclick="toggleSidebar()">☰ Menü</button>
            </nav>

            @RenderBody()
        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("active");
        }

        function goTurAnaliz() {
            const bas = document.getElementById("menuBas")?.value;
            const bit = document.getElementById("menuBit")?.value;

            if (!bas || !bit) {
                alert("Başlangıç ve bitiş tarih ve saatini seçiniz!");
                return;
            }

            // Dashboard sayfasına yönlendirme, query param olarak tarih gönder
            window.location.href = `/Dashboard?bas=${encodeURIComponent(bas)}&bit=${encodeURIComponent(bit)}`;
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
