<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData != null && ViewData["Title"] != null ? ViewData["Title"] : "Güvenlik Tur") - GOM</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2"></script>

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-gradient: linear-gradient(180deg, #1a2a6c 0%, #2c5364 100%);
        }

        body { overflow-x: hidden; background-color: #f4f7f6; font-family: 'Segoe UI', sans-serif; }
        #wrapper { display: flex; width: 100%; }

        /* --- SIDEBAR --- */
        .sidebar {
            width: var(--sidebar-width);
            min-width: var(--sidebar-width);
            min-height: 100vh;
            background: var(--sidebar-gradient);
            color: white;
            box-shadow: 4px 0 15px rgba(0,0,0,0.2);
            transition: all 0.3s;
            z-index: 1050;
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,0.7);
            padding: 12px 20px;
            margin: 4px 12px;
            border-radius: 10px;
            text-decoration: none;
            display: block;
            transition: 0.2s;
        }

        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: rgba(255,255,255,0.1);
            color: #00d2ff !important;
        }

        .sidebar .nav-link.active { background: #00d2ff !important; color: white !important; }

        .filter-section {
            padding: 1rem;
            background: rgba(255,255,255,0.08);
            margin: 10px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.1);
        }

        /* --- İÇERİK --- */
        .content-area { flex: 1; padding: 2rem; width: 100%; min-width: 0; }

        .mobile-top-bar {
            display: none;
            background: #1a2a6c;
            color: white;
            padding: 10px 15px;
            position: sticky;
            top: 0;
            z-index: 1100;
        }

        /* --- RESPONSIVE AYARLAR --- */
        @@media (max-width: 992px) {
            .mobile-top-bar { display: flex; justify-content: space-between; align-items: center; }
            .sidebar { position: fixed; left: -260px; }
            #wrapper.toggled .sidebar { left: 0; }
            .content-area { padding: 1rem; }
            
            /* Grafikler mobilde kaybolmasın diye zorunlu yükseklik */
            canvas { min-height: 250px !important; width: 100% !important; }

            /* [2026-02-25] Buton Standardizasyonu (Mobil) */
            .d-flex.gap-2, .d-flex.gap-3 { flex-direction: column !important; }
            .btn-info, .btn-success, .btn-danger, .btn-warning, .btn-action { width: 100% !important; margin-bottom: 5px; }
        }
    </style>
</head>
<body>

    <div class="mobile-top-bar shadow">
        <button class="btn btn-outline-light btn-sm" id="menu-toggle"><i class="bi bi-list fs-3"></i></button>
        <span class="fw-bold">GOM YÖNETİM</span>
        <div style="width: 40px;"></div>
    </div>

    <div class="d-flex" id="wrapper">
        <div class="sidebar border-end shadow">
            <div class="p-4 border-bottom text-center">
                <h5 class="m-0 fw-bold" style="color: #00d2ff;">GÜVENLİK TUR</h5>
                <small class="text-white-50">Yönetim Paneli v2.5</small>
            </div>

            <ul class="nav flex-column mb-3 mt-3">
                <li><a class="nav-link" href="/Index"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
                <li><a class="nav-link" href="/TurAnaliz"><i class="bi bi-search me-2"></i> Tur Analizi</a></li>
                <li><a class="nav-link" href="#" onclick="gitEksikNokta()"><i class="bi bi-exclamation-triangle me-2"></i> Eksik Nokta</a></li>
                <li><a class="nav-link" href="/GunlukTur"><i class="bi bi-calendar3 me-2"></i> Günlük Tur</a></li>
                <li><a class="nav-link" href="/BekciPerformans"><i class="bi bi-star me-2"></i> Bekçi Performansı</a></li>
                <li><a class="nav-link" href="/AtilmayanTur"><i class="bi bi-calendar-x me-2"></i> Atılmayan Tur</a></li>
                <li><a class="nav-link" href="/MukerrerNoktalar"><i class="bi bi-layers-half me-2"></i> Mükerrer Tur</a></li>
            </ul>

            <div class="filter-section">
                <h6 class="text-info small fw-bold">ZAMAN ARALIĞI</h6>
                <input type="datetime-local" id="menuBas" class="form-control form-control-sm mb-2 bg-dark text-white border-0" />
                <input type="datetime-local" id="menuBit" class="form-control form-control-sm mb-2 bg-dark text-white border-0" />
                <button type="button" id="btnRapor" onclick="raporuGetir()" class="btn btn-info btn-sm w-100 text-white fw-bold shadow-sm">
                    <i class="bi bi-arrow-repeat me-1"></i> Raporu Güncelle
                </button>
            </div>

            <div class="filter-section">
                <h6 class="text-success small fw-bold">DIŞA AKTAR</h6>
                <button onclick="exportAllExcel()" class="btn btn-success btn-sm w-100 mb-2 fw-bold">
                    <i class="bi bi-file-earmark-excel me-2"></i> Excel (.xlsx)
                </button>
                <button onclick="exportAllPDF()" class="btn btn-danger btn-sm w-100 mb-2 fw-bold">
                    <i class="bi bi-file-earmark-pdf me-2"></i> PDF (.pdf)
                </button>
                <a href="/VeriYukle" class="btn btn-warning btn-sm w-100 fw-bold" style="color: #1a2a6c;">
                    <i class="bi bi-cloud-arrow-up-fill me-2"></i> VERİ YÜKLE
                </a>
            </div>
        </div>

        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Menü Toggle
            $("#menu-toggle").click(function(e) {
                e.stopPropagation();
                $("#wrapper").toggleClass("toggled");
            });

            // Mobilde dışarı basınca menü kapansın
            $(document).click(function(e) {
                if ($("#wrapper").hasClass("toggled") && !$(e.target).closest(".sidebar").length) {
                    $("#wrapper").removeClass("toggled");
                }
            });

            // Aktif link işaretleme
            const path = window.location.pathname;
            $('.sidebar .nav-link').each(function() {
                if ($(this).attr('href') === path) $(this).addClass('active');
            });

            $("#menuBas").val(localStorage.getItem("baslangic"));
            $("#menuBit").val(localStorage.getItem("bitis"));
        });

        async function raporuGetir() {
            const bas = $("#menuBas").val();
            const bit = $("#menuBit").val();
            if (!bas || !bit) return alert("Tarih seçiniz!");
            $("#btnRapor").prop('disabled', true).text("Yükleniyor...");
            try {
                const res = await fetch(`/api/TurAnaliz?baslangic=${encodeURIComponent(bas)}&bitis=${encodeURIComponent(bit)}`);
                const data = await res.json();
                localStorage.setItem("baslangic", bas);
                localStorage.setItem("bitis", bit);
                sessionStorage.setItem("turData", JSON.stringify(data));
                window.location.reload();
            } catch (err) { alert("Veri hatası!"); }
            finally { $("#btnRapor").prop('disabled', false).html('<i class="bi bi-arrow-repeat me-1"></i> Raporu Güncelle'); }
        }

        function exportAllExcel() {
            let tables = document.querySelectorAll("table");
            if (tables.length === 0) return alert("Tablo yok!");
            const wb = XLSX.utils.book_new();
            tables.forEach((table, index) => {
                const ws = XLSX.utils.table_to_sheet(table);
                XLSX.utils.book_append_sheet(wb, ws, "Sayfa " + (index + 1));
            });
            XLSX.writeFile(wb, `GOM_Rapor_${new Date().toLocaleDateString('tr-TR')}.xlsx`);
        }

        function exportAllPDF() {
            const element = document.querySelector(".content-area");
            html2pdf().set({ margin: [10, 10], filename: 'GOM_Rapor.pdf', html2canvas: { scale: 2 }, jsPDF: { unit: 'mm', format: 'a4', orientation: 'landscape' } }).from(element).save();
        }

        function gitEksikNokta() {
            if (!sessionStorage.getItem("turData")) return alert("Önce raporu güncelleyin.");
            window.location.href = "/EksikNokta";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>