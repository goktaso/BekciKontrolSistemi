@page
@model GuvenlikKontrolWeb.Pages.TurAnalizModel
@{
    ViewData["Title"] = "Tur Analiz";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-body rounded">
    <h2 class="text-primary border-bottom pb-2">🕵️ Tur Analiz Raporu</h2>
    <div id="seciliTarih" class="mb-3 fw-bold text-muted"></div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered border-primary">
            <thead class="table-dark">
                <tr>
                    <th>Tarih</th>
                    <th>Tur No</th>
                    <th>Sıra</th>
                    <th>Bekçi</th>
                    <th>Kontrol Noktası</th>
                    <th>Devriye Saati</th>
                    <th>İki Nokta Arası</th>
                    <th>İki Tur Arası</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <tr>
                    <td colspan="8" class="text-center">Veri hazırlanıyor...</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", loadTurAnaliz);

        function loadTurAnaliz() {
            const bas = localStorage.getItem("baslangic");
            const bit = localStorage.getItem("bitis");
            const cachedData = sessionStorage.getItem("turData");

            const tableBody = document.getElementById("tableBody");
            const seciliTarihDiv = document.getElementById("seciliTarih");

            if (!cachedData || cachedData === "[]") {
                if(seciliTarihDiv) seciliTarihDiv.innerHTML = `<span class="text-danger">⚠️ Veri Hazır Değil!</span>`;
                tableBody.innerHTML = `<tr><td colspan="8" class="text-center p-4">Lütfen sol menüdeki <b>"Raporu Güncelle"</b> butonuna basarak verileri hazırlayın.</td></tr>`;
                return;
            }

            if(seciliTarihDiv) seciliTarihDiv.innerHTML = `📅 Dönem: ${formatDate(bas)} - ${formatDate(bit)}`;

            try {
                const data = JSON.parse(cachedData);

                // 1. SIRALAMA (Küçükten Büyüye)
                data.sort((a, b) => {
                    if (a.turNo !== b.turNo) return a.turNo - b.turNo;
                    if (a.satirTipi === "TOPLAM") return 1;
                    if (b.satirTipi === "TOPLAM") return -1;
                    return a.turIciNo - b.turIciNo;
                });

                // 2. VERİ BİRLEŞTİRME (En hızlı ve güvenli yol)
                let rowsHtml = "";

                data.forEach(row => {
                            // TurAnaliz.cshtml içindeki döngüde Toplam satırı kısmı
        if (row.satirTipi === "TOPLAM") {
            rowsHtml += `
                <tr style="background-color:#fff9c4; font-weight:bold; border-top: 2px solid #dee2e6;">
                    <td></td>
                    <td class="text-center">${row.turNo}</td>
                    <td colspan="2"></td>
                    <td class="text-primary text-center">TUR ${row.turNo} TOPLAM ÖZETİ</td>
                    <td></td>
                    <td class="text-center text-success">${formatDuration(row.turToplamSn)}</td>
                    <td class="text-center text-danger">
                        ${row.ikiTurArasiSn > 0 ? formatDuration(row.ikiTurArasiSn) : '---'}
                    </td>
                </tr>`;
        }
                     else {
                        rowsHtml += `
                            <tr>
                                <td>${formatOnlyDate(row.operasyonGunu)}</td>
                                <td class="text-center">${row.turNo ?? ''}</td>
                                <td class="text-center">${row.turIciNo ?? ''}</td>
                                <td>${row.bekciAdi ?? ''}</td>
                                <td>${row.kontrolNoktasiAdi ?? ''}</td>
                                <td class="text-center">${formatOnlyTime(row.devriyeZamani)}</td>
                                <td class="text-center">${formatDuration(row.ikiNoktaArasiSn)}</td>
                                <td></td>
                            </tr>`;
                    }
                });

                // 3. TEK SEFERDE DOM'A BASMA
                tableBody.innerHTML = rowsHtml;

            } catch (err) {
                console.error("Veri işleme hatası:", err);
                tableBody.innerHTML = `<tr><td colspan="8" class="text-danger text-center">Veri okunurken hata oluştu.</td></tr>`;
            }
        }

        // YARDIMCI FONKSİYONLAR
        function formatDuration(seconds) {
            if (!seconds || seconds <= 0) return "00:00:00";
            const h = Math.floor(seconds / 3600).toString().padStart(2, '0');
            const m = Math.floor((seconds % 3600) / 60).toString().padStart(2, '0');
            const s = Math.floor(seconds % 60).toString().padStart(2, '0');
            return `${h}:${m}:${s}`;
        }

        function formatOnlyDate(dateStr) {
            if(!dateStr) return "-";
            const d = new Date(dateStr);
            return isNaN(d) ? "-" : d.toLocaleDateString('tr-TR');
        }

        function formatOnlyTime(dateStr) {
            if(!dateStr) return "-";
            const d = new Date(dateStr);
            return isNaN(d) ? "-" : d.toLocaleTimeString('tr-TR', { hour12: false });
        }

        function formatDate(dateStr) {
            if(!dateStr) return "-";
            const d = new Date(dateStr);
            return isNaN(d) ? "-" : d.toLocaleString('tr-TR');
        }
    </script>
}